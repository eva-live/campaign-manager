<% content_for :breadcrumb do %> 
        <div class="page-header pull-left">
            <div class="page-title">
                Attachments</div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li><i class="fa fa-home"></i>&nbsp;<a href="/">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
            <li class="active">Attachments</li>
        </ol>
<%end%>

<% content_for :main_body do %> 	
      <table class="table table-striped table-hover ">
        <thead>
          <tr >
            <th>ID</th>
            <th>Name</th>
            <th>Content Type</th>
            <th colspan="3" width="10%"></th>
          </tr>
        </thead>
        <tbody>
          <% @attachments.each do |attachment| %>
            <tr>
              <td><%=attachment.id%></td>
              <td><%=attachment.filename%></td>
               <td><%=attachment.content_type%></td>
              <td><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>      
      <br>      
      <%= link_to 'New Attachment', new_attachment_path  , class:"btn btn-default btn-sm" %>
<%end%>



