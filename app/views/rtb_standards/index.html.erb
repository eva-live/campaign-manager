 <% content_for :breadcrumb do %> 
        <div class="page-header pull-left">
            <div class="page-title">
                Rules</div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li><i class="fa fa-home"></i>&nbsp;<a href="/">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
            <li class="active">Rules</li>
        </ol>
<%end%>

<% content_for :main_body do %> 
      <style>a:focus { color: green !important; }</style>
      <%= link_to 'New rule', new_rtb_standard_path  , class:"btn btn-default btn-sm" %>
      <table class="table table-striped table-hover" id="listtable">
        <thead>
          <tr >            
            <th>ID</th>
            <th>Rule Name</th>
            <th>Campaigns</th>
            <th>Banners</th>
            <th>Videos</th>
            <th width="3%"></th>
            <th width="3%"></th>
            <th width="3%"></th>
            <th width="3%"></th>
          </tr>
        </thead>
        <tbody>
          <% @rtb_standards.each do |rtb_standard| %>
            <tr>
              <td><%=rtb_standard.id%></td>
              <td><%=rtb_standard.name%></td>
              <td>
                  <%if rtb_standard.campaigns  %>
                      <% rtb_standard.campaigns.each do |camp| %>
                         <%=camp.name%> (<%= link_to "ID #{camp.id}", campaign_path(camp)%>)<br/>                    
                     <%end%>
                  <%end%>
              </td>
              <td>
                  <%if rtb_standard.banners  %>
                      <% rtb_standard.banners.each do |banner| %>
                         <%=banner.name%> (ID <%= link_to "ID #{banner.id}", banner_path(banner)%>)<br/>                    
                     <%end%>
                  <%end%>
              </td>
              <td>
                  <%if rtb_standard.banner_videos  %>
                      <% rtb_standard.banner_videos.each do |banner_video| %>
                         <%=banner_video.name%> (<%= link_to "ID #{banner_video.id}", banner_video_path(banner_video)%>)<br/>                    
                     <%end%>
                  <%end%>
              </td>              
              <td><%= link_to 'Show',rtb_standard   %></td>
              <td><%= link_to 'Edit', edit_rtb_standard_path(rtb_standard)  %></td>
              <td><%= link_to 'Duplicate', duplicatertb_standard_path(:id=>rtb_standard.id) %></td>
              <td><%= link_to 'Destroy', rtb_standard, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      

<%end%>


