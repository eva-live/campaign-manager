<% content_for :breadcrumb do %> 
        <div class="page-header pull-left">
            <div class="page-title">
                Documents</div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li><i class="fa fa-home"></i>&nbsp;<a href="/">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
            <li class="active">Documents</li>
        </ol>
<%end%>

<% content_for :main_body do %>

      <table class="table table-striped table-hover ">
        <thead>
          <tr >
            <th>Document Name</th>
            <th>Description</th>
            <th>Assigned Categories</th>
            <th>Updated</th>
            <th colspan="4" width="10%"></th>
          </tr>
        </thead>
        <tbody>
          <% @documents.each do |document| %>
            <tr>
              <td><%=document.name%></td>
              <td><%=document.description%></td>
              <td>
				         <% document.categories.each do |category| %>
                    <%= link_to category.name, category_path(category)%>
                  <%end%>
              </td>
              <td><%=document.updated_at.strftime("%b %e %H:%M %Z %Y")%></td>
              <td><%= link_to 'Edit', edit_document_path(document) %></td>
              <td><%= link_to 'Show', help_open_path(:id=>document.id)%></td>
              <td><%= link_to 'Duplicate', duplicatedoc_path(:id=>document.id) %></td>
              <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Document', new_document_path  , class:"btn btn-default btn-sm" %>
      
<%end%>