<%= bootstrap_form_for(@user,layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.text_field :name, label: "Name" , class: "input-sm" %>
  <%= f.email_field :email, class: "input-sm"  %>
  <%= f.password_field :password , class: "input-sm" %>
  <%= f.password_field :password_confirmation , class: "input-sm" %>
  
  <div class="form-group"><label class="control-label col-sm-2" for="user_admin">Administrator</label>
    <div class="col-sm-10">
        <%= f.check_box :admin, label: ""  %>
    </div>
  </div>  
  <br/>

  <div class="actions">
    <div class="col-sm-2"></div>
        <div class="col-sm-10">
        <button type="submit" class="btn btn-default btn-sm">Update</button>
    </div>
  </div>  
  
  
<% end %>
